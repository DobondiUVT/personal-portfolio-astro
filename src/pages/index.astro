---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";


const projects = [
  {
    title: "Neho",
    img: "/neho.svg",
    desc: "Swiss real estate company that offers an innovative approach to selling properties. Neho represents a modern approach to real estate transactions, leveraging technology to streamline the selling process while potentially reducing costs for property owners.",
    url: "https://neho.ch",
  },
  {
    title: "Strike",
    img: "/strike.svg",
    desc: "Swiss real estate financing company driven by a single mission: transforming clients' mortgages into their best investments, providing tailor-made solutions to meet the diverse financial needs of property owners.",
    url: "https://strike-advisory.ch",
  },
  {
    title: "MO-UVT",
    img: "/mo-uvt.png",
    desc: "Computer Science Bachelor's degree thesis project for West University of Timisoara. It allows students to easily browse and select optional subjects for their faculty, streamlining the course selection process.",
    url: "https://mo-uvt.vercel.app",
  },
];
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-5xl font-bold">David Dobondi</div>
    <div class="text-3xl py-3 font-bold">
      Web Developer
      <a href="https://neho.ch" target="_blank" class="link link-hover"
        >@ Neho</a
      >
    </div>
    <div class="mt-8">
      <a
        class="btn btn-primary"
        href="mailto:dobondiwork@gmail.com"
        target="_blank"
      >
        Let's connect!</a
      >
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">My projects</div>
  </div>

  {
    projects.map((project) => (
      <>
        <HorizontalCard
          title={project.title}
          img={project.img}
          desc={project.desc}
          url={project.url}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
